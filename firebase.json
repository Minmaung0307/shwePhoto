{
  "firestore": {
    "database": "(default)",
    "location": "nam5",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api/**", "function": "api" }
    ],
    "headers": [
      { "source": "**", "headers": [{ "key": "Cache-Control", "value": "no-store" }] }
    ]
  },
  "functions": {
    "runtime": "nodejs20"
  }
}
